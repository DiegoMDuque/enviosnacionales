<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

            <main>
                <section>
                    <article class="article-login">
                        <img class="imag-logo-login" src="img/Logo_EDN.png">

                        <form class="form-login" action="/list" method="post">

                            <div>
                                <input class="entry" type="text" placeholder="Usuario" name="user">
                            </div>

                            <div>
                                <input class="entry" type="password" placeholder="Contraseña" name="password">
                            </div>

                            <p>
                                <input type="checkbox" name="recordarme"><label
                                    class="checkbox-inline">Recordarme</label>
                                <a href="/register">¿Olvidó su contraseña?</a>
                            </p>

                            <div class="button">
                                <input type="submit" value="INGRESAR">
                            </div>

                        </form>
                    </article>
                </section>
            </main>

            <%- include('./partials/footer') %>
    </body>

</html>