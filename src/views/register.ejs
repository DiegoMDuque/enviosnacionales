<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

            <main>
                <section>
                    <article class="article-login">
                        <img class="imag-logo-login" src="img/Logo_EDN.png">

                        <form class="form-login" action="/sucess" method="post">

                            <div>
                                <input class="entry" type="text" placeholder="Usuario" name="user">
                            </div>

                            <div>
                                <input class="entry" type="password" placeholder="Contraseña" name="password">
                            </div>

                            <div>
                                <select class="entry">
                                    <option value="tesla">Medellín Centro</option>
                                    <option value="volvo">Itaguí</option>
                                    <option value="mercedes">Medellín Terminal</option>
                                </select">
                            </div>

                            <div class="button">
                                <input type="submit" value="REGISTRAR">
                            </div>

                        </form>
                    </article>
                </section>
            </main>

            <%- include('./partials/footer') %>
    </body>

</html>